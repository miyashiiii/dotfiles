# ls
def _ls(args):
    args = args[0].replace('-', '') if args else ''
    if $(pwd).rstrip(os.linesep) == $DOTFILES:
        $(which -s ls) @(f"-{''.join(set(args + 'aG'))}")
    else:
        $(which -s ls) @(f"-{''.join(set(args + 'G'))}")
aliases['ls'] = _ls
aliases['la'] = 'ls -a'
aliases['ll'] = 'ls -la'

